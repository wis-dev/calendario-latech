/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@modules/*": ["app/modules/*"],
      "@shared": ["app/shared/shared.index.ts"],
      "@environment": ["environments/environment.ts"],
      "@shared/*": [
        "app/shared/*"
      ],
      "@services": [
        "app/shared/services/index.ts"
      ],
      "@interfaces": [
        "app/shared/interfaces/index.ts"
      ],
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
